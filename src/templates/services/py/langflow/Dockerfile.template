# syntax=docker/dockerfile:1
FROM langflowai/langflow:latest

USER root

# Ensure langflow user exists
RUN useradd -m -s /bin/bash langflow || true

# Install system dependencies for Graphiti and potential Illustrator tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Pre-install specific versions of core dependencies to avoid conflicts
RUN pip install --no-cache-dir \
    "pydantic>=2.11.5" \
    "neo4j>=5.26.0" \
    "falkordb>=1.1.2,<2.0.0" \
    "google-genai>=1.8.0" \
    "openai>=1.91.0,<2.0.0" \
    "redis<6.0.0" \
    "tenacity<9.0.0" \
    "voyageai>=0.2.3" \
    "mermaid-python" \
    "elasticsearch>=8.11.0"

# Copy local graphiti_core if available in build context
ADD --chown=langflow:langflow ./graphiti_core /app/graphiti_core

# Copy custom components
ADD --chown=langflow:langflow ./custom_components /app/custom_components

# Copy extraction bridge
COPY --chown=langflow:langflow ./ragflow_to_graphiti.py /app/ragflow_to_graphiti.py

# Install the local graphiti_core
RUN pip install --no-cache-dir -e /app/graphiti_core

# Fix permission issue for alembic logs
RUN mkdir -p /app/.venv/lib/python3.12/site-packages/langflow/alembic/ && \
    touch /app/.venv/lib/python3.12/site-packages/langflow/alembic/alembic.log && \
    chown -R langflow:langflow /app/.venv/lib/python3.12/site-packages/langflow/alembic/ && \
    chmod -R 775 /app/.venv/lib/python3.12/site-packages/langflow/alembic/

# Switch back to the langflow user
USER langflow

# Langflow default port
EXPOSE 7860

CMD ["python", "-m", "langflow", "run", "--host", "0.0.0.0", "--port", "7860"]
