# GraphRAG - LLM Graph Builder
# Pre-built Docker image - no build required

  {{SERVICE_NAME}}:
    image: docker.io/neo4jlabs/llm-graph-builder:latest
    container_name: ${PROJECT_NAME}_{{SERVICE_NAME}}
    restart: unless-stopped
    ports:
      - "{{SERVICE_PORT}}:8000"
    environment:
      - OPENAI_API_KEY=${OPENAI_API_KEY:-}
      - OPENROUTER_API_KEY=${OPENROUTER_API_KEY:-}
      - NEO4J_URI=${NEO4J_URI:-bolt://graph:7687}
      - NEO4J_USERNAME=${NEO4J_USER:-neo4j}
      - NEO4J_PASSWORD=${NEO4J_PASSWORD:-}
      - NLTK_DATA=/app/data/nltk
      - HF_HOME=/app/data/hf_cache
    volumes:
      - ./services/{{SERVICE_NAME}}/data:/app/data
    networks:
      - nself_network
    depends_on:
      - graph
